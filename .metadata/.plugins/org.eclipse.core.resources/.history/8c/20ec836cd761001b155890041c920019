package com.ceking.crowd.config;

import java.io.IOException;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.springframework.web.bind.annotation.ControllerAdvice;
import org.springframework.web.bind.annotation.ExceptionHandler;
import org.springframework.web.servlet.ModelAndView;

import com.ceking.crowd.util.CrowdUtil;
import com.ceking.crowd.util.ResultEntity;
import com.google.gson.Gson;

/**
 * @ControllerAdvice 当前是一个异常处理类
 * @author cjq
 *
 */
@ControllerAdvice
public class CrowdExceptionResolver {
	
	/**
	 * 
	 * @param exception
	 * @return
	 * @throws IOException 
	 */
	@ExceptionHandler(value=NullPointerException.class)
	public ModelAndView resolveNullPointerException(
			NullPointerException exception,
			HttpServletRequest request,
			HttpServletResponse response) throws IOException {
		//1.判断请求类型
		boolean requestType = CrowdUtil.judgeRequestType(request);
		
		if (requestType) {
			//ajax请求
			ResultEntity<Object> entity = ResultEntity.failed(exception.getMessage());
			Gson gson =new Gson();
			String json = gson.toJson(entity);
			response.getWriter().write(json);
			//通过response 对象返回了相应，不提供ModelAndView
			return null;
		}else{
			//非ajax请求处理异常
			ModelAndView modelAndView =new ModelAndView();
			modelAndView.addObject("exception",exception);
			modelAndView.setViewName("system-error");			
			return modelAndView;
		}
		
		
		
		
	}
}
