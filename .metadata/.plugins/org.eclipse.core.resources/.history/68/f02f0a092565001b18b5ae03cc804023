	<%@ include file="/WEB-INF/views/assign/assign-auth.jsp"%>
	<script src="ztree/jquery.ztree.all-3.5.min.js"></script>
	<script type="text/javascript" src="crowd/role-page.js"></script>
	<script type="text/javascript">
		$(function() {
			window.pageNum = 1;
			window.pageSize = 5;
			window.keyWord = "";
			generatePage();
			$("#btnSearch").click(function() {
				var keyWord = $("#keyWord").val();
				window.keyWord = keyWord;
				generatePage();
			})
			//选中按钮
			$(".chkBtn").on("click",function(){
				
				$("#assignAuthModal").modal("show");
				window.roleId = $(this).attr("id");
				fillAuthTree();
			})
			
			
			
			
			$("#showAddModel").click(function() {
				$("#myModalLabel").html("新增角色");
				$("#myModal").modal("show");
			})
			
			
			$("#btnSave").click(function() {
				var postData = {
					id : $("#roleId").val(),
					name : $("#roleName").val()
				};
				if (postData.id == "") {
					//新增
					postData.id = 0;
					window.pageNum = 99999;
				}
				$.ajax({
					url : "role/save.json",
					type : "post",
					data : postData,
					dataType : "json",
					success : function(result) {
						console.log(result);
						if (result.result == "SUCCESS") {
							layer.msg("保存成功！");
							
							generatePage();
						}
					},
					error : function(err) {
						//console.log(err);
						layer.msg(err);
					}
				});
				$("#myModal").modal("hide");
				//清理模态框
				$("#roleName").val("");
				$("#roleId").val("");
			});
			$("#chkAll").click(function(){
				var status = this.checked;
				$(".btn-chk-role").prop("checked",status);				
			});
			$(".btn-chk-role").click(function(){
				//已选中的数量
				var chkBoxCount = $(".btn-chk-role:checked").length;
				//全部的数量
				var totalChkBoxCount = $(".btn-chk-role").length;
				
				$("#chkAll").prop("checked",(chkBoxCount==totalChkBoxCount?true:false));								
			});
			$("#batchRemove").click(function(){
				var roleArray=[];
				$(".btn-chk-role").each(function(){
					if(this.checked){
						//var name = this.dataName;
						var id = $(this).attr("dataId");
						roleArray.push(id);
						/* roleArray.push({
							id:id,
							name:name
						}); */
					}
				})
				if(roleArray.length==0){
					layer.msg("请选择要删除的角色！");
					return ;
				}
				var postData = JSON.stringify(roleArray);
				$.ajax({
					url : "role/deleteBatch.json",
					type : "post",
					data :postData,
					contentType:"application/json;charset=UTF-8",
					dataType : "json",
					success : function(result) {
						console.log(result);
						if (result.result == "SUCCESS") {
							layer.msg("删除成功！");
							generatePage();
						}
					},
					error : function(err) {
						layer.msg(err);
					}
				});
			})			
		})
		function editRole(id, name) {
			$("#roleId").val(id);
			$("#roleName").val(name);
			$("#myModalLabel").html("编辑角色");
			$("#myModal").modal("show");
		}
		function delRole(id, name) {
			var postData = {
				id : id
			};
			layer.confirm('确定要删除角色【' + name + '】吗？', {
				icon : 3,
				title : '提示'
			}, function(index) {
				$.ajax({
					url : "role/delete.json",
					type : "post",
					data : postData,
					dataType : "json",
					success : function(result) {
						console.log(result);
						if (result.result == "SUCCESS") {
							layer.msg("删除成功！");
							generatePage();
						}
					},
					error : function(err) {
						layer.msg(err);
					}
				});
				layer.close(index);
			});
		}
	</script>
</body>
